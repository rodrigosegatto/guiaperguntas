<%- include('elements/header.ejs') %>
<%- include('elements/navbar.ejs') %>
<div class="container">
    <hr><h1><%= pergunta.titulo %></h1>
    <p><%= pergunta.descricao %></p>
    <hr>
    <form method="POST" action="/responder">
        <label>Responda</label>
        <textarea name="corpo" class="form-control" placeholder="Digite sua resposta"></textarea><br>
        <input type="hidden" name="perguntaId" value="<%=pergunta.id%>">
        <button type="submit" class="btn btn-primary">Responder</button>
        <hr><h3>Respostas</h3>
        <% respostas.forEach(resposta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%=resposta.corpo%></p>
                </div>
            </div>
        <% }) %>
    </form>
</div>
<%- include('elements/footer.ejs') %>